generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatLog {
  id        String   @id @default(cuid())
  sessionId String
  role      String   // 'user' | 'assistant'
  content   String
  createdAt DateTime @default(now())
  
  @@index([sessionId])
}

model Lead {
  id        String   @id @default(cuid())
  email     String
  name      String?
  company   String?
  source    String   @default("chat")
  createdAt DateTime @default(now())
}
