// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ChatLog - Stores messages to provide "memory" to the agent
model ChatLog {
  id        String   @id @default(cuid())
  sessionId String
  role      String   // 'user' | 'assistant'
  content   String
  createdAt DateTime @default(now())

  @@index([sessionId])
}

// Lead - Stores captured recruiter/contact information
model Lead {
  id        String   @id @default(cuid())
  email     String
  name      String?
  company   String?
  source    String   @default("chat")
  createdAt DateTime @default(now())
}

// Document - Stores ingested documents for reference
model Document {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  content   String
  source    String   @default("uploaded")
  createdAt DateTime @default(now())

  @@index([userId])
}
